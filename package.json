{
  "name": "@platform-coop-toolkit/learning-commons",
  "version": "1.0.0-alpha.0",
  "description": "WordPress theme for the Platform Cooperativism Resource Library",
  "author": "OCAD University <platform-coop-development-kit@lists.inclusivedesign.ca>",
  "license": "BSD-3-Clause",
  "keywords": [
    "wordpress",
    "theme"
  ],
  "homepage": "https://github.com/platform-coop-toolkit/learning-commons/",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/platform-coop-toolkit/learning-commons.git"
  },
  "bugs": {
    "url": "https://github.com/platform-coop-toolkit/learning-commons/issues"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">= 10.0.0"
  },
  "dependencies": {
    "custom-event-polyfill": "^1.0.7",
    "jquery": "^3.4.1",
    "modern-css-reset": "^1.0.4"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.2",
    "@platform-coop-toolkit/pinecone": "git+https://github.com/platform-coop-toolkit/pinecone.git",
    "@wordpress/babel-preset-default": "^4.7.0",
    "@wordpress/browserslist-config": "^2.6.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^2.1.0",
    "@wordpress/scripts": "^6.0.0",
    "babel-eslint": "^10.0.3",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.0.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "laravel-mix": "^5.0.0",
    "laravel-mix-copy-watched": "^2.2.1",
    "laravel-mix-purgecss": "^4.2.0",
    "npm-run-all": "^4.1",
    "rimraf": "^3.0",
    "sass": "^1.23.3",
    "sass-loader": "^8.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=development run-s mix",
    "build:production": "cross-env NODE_ENV=production run-s clean mix",
    "start": "cross-env NODE_ENV=development run-s \"mix -- --watch\"",
    "hot": "cross-env NODE_ENV=development run-s build mix:hot",
    "mix": "webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "mix:hot": "webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "lint": "run-s -c lint:*",
    "lint:scripts": "eslint resources/assets/scripts",
    "lint:styles": "stylelint \"resources/assets/**/*.{vue,css,sass,scss,less}\"",
    "lint:pkg-json": "wp-scripts lint-pkg-json .",
    "test": "run-s -c lint"
  },
  "npmpackagejsonlint": {
    "extends": "@wordpress/npm-package-json-lint-config",
    "rules": {
      "valid-values-license": [
        "error",
        [
          "BSD-3-Clause"
        ]
      ]
    }
  }
}
